---
import Topbar from "src/layouts/Topbar.astro";
import Layout from "../layouts/Layout.astro";
import Header from "src/layouts/Header.astro";
import { container_father } from '../utils/Containers';
import ComponentFather from "src/components/ComponentFather.astro";

import ComponenteMetasPddsGnrl from "./facturacion/MetasVentaGnrl";
import ComponenteGraphicVenta from "./facturacion/GraphicVenta";
import ComponenteTableFacturacion from "./facturacion/TableFacturacion"
---

<Layout title="Facturación - CLO">
  <!-- Header -->
  <Header />
  <div class="flex flex-col">
    <!-- Topbar -->
    <div>
      <Topbar />
      <div class="hr-custom"></div>
    </div>

    <!-- Content -->
    <div id="content" class="w-full">
      <!-- Container #1: Ventas -->
      <div id="container-ventas" class={`${container_father}`}>
        <!-- Subcontainer 1.1: Meta de ventas general -->
        <ComponentFather
          title={"Meta de ventas general"}
          containerId={"facturacion_1-1"}
        >
          <ComponenteMetasPddsGnrl client:load />
        </ComponentFather>

        <!-- Subcontainers 1.2: Facturación (gráfico) -->
        <ComponentFather
          title={"Gráfico de ventas"}
          containerId={"facturacion_1-2"}
        >
          <ComponenteGraphicVenta client:load />
        </ComponentFather>
      </div>

      <!-- Container #2: Facturación  -->
      <div id="container-facturacion" class={`${container_father}`}>
        <!-- Subcontainer 2.1: Tabla de facturación -->
        <ComponentFather
          title={"Detalle de facturación"}
          containerId={"facturacion_2-1"}
        >
          <ComponenteTableFacturacion client:load />
        </ComponentFather>
      </div>
    </div>
  </div>
</Layout>