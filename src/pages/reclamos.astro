---
import Topbar from "src/layouts/Topbar.astro";
import Layout from "../layouts/Layout.astro";
import Header from "src/layouts/Header.astro";
import { containers, subcontainers, containers_titles, c_w_reclamos } from '../utils/Containers';

import Componente_dttl_rclm_gnrl from './reclamos/dtll_rclm_gnrl'
import Componente_graphic_rclm_gnrl from './reclamos/graphic_rclm_gnrl'
import Componente_table_reclamos from './reclamos/table_reclamos'
---

<Layout title="Reclamos - CLO">
  <!-- Header -->
  <Header />
  <div class="flex flex-col">
    <!-- Topbar -->
    <div>
      <Topbar />
      <div class="hr-custom"></div>
    </div>

    <!-- Content -->
    <div id="content" class="w-full">
      <!-- Container #1: Reclamos -->
      <div id="container-reclamos">
        <div class="w-full flex flex-wrap">
          <!-- Subcontainer 1.1: Detalle de reclamos generales -->
          <div class={`${containers} ${c_w_reclamos['c_1-1']}`}>
            <div class={`${subcontainers}`}>
              <p class={`${containers_titles}`}>
                Detalle de reclamos generales
              </p>
              <div class="flex justify-center items-center h-[40dvh] w-auto">
                <Componente_dttl_rclm_gnrl client:load />
              </div>
            </div>
          </div>

          <!-- Subcontainer 1.2: Reclamos realizados por vendedor -->
          <div class={`${containers} ${c_w_reclamos['c_1-2']}`}>
            <div class={`${subcontainers}`}>
              <p class={`${containers_titles}`}>
                Reclamos realizados por vendedor
              </p>
              <div class="flex justify-center items-center h-[40dvh] w-auto">
                <Componente_graphic_rclm_gnrl client:load />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Container #2: Detalle de reclamos por vendedor -->
      <div id="container-tables">
        <div class="w-full flex flex-wrap">
          <!-- Subcontainer 2.1: Detalle de reclamos por vendedor -->
          <div class={`${containers} ${c_w_reclamos['c_2-1']}`}>
            <div class={`${subcontainers}`}>
              <p class={`${containers_titles}`}>
                Detalle de reclamos por vendedor
              </p>
              <div class="flex justify-center items-center h-[40dvh]">
                <Componente_table_reclamos client:load />
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>