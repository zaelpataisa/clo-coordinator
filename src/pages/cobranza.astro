---
import Topbar from "src/layouts/Topbar.astro";
import Layout from "../layouts/Layout.astro";
import Header from "src/layouts/Header.astro";
import { containers, subcontainers, containers_titles, c_w_cobranza } from '../utils/Containers';

import Componente_metas_cobr from "./cobranza/metas_cobr";
import Componente_graphic_cobr_bs from "./cobranza/graphic_cobr_bs";
import Componente_graphic_cobr_ref from "./cobranza/graphic_cobr_ref";
import Componente_table_cobranza from "./cobranza/table_cobranza";
---

<Layout title="Cobranza - CLO">
  <!-- Header -->
  <Header />
  <div class="flex flex-col">
    <!-- Topbar -->
    <div>
      <Topbar />
      <div class="hr-custom"></div>
    </div>

    <!-- Content -->
    <div id="content" class="w-full">
      <!-- Container #1: Cobranza -->
      <div id="container-cobranza">
        <div class="w-full flex flex-wrap">
          <!-- Subcontainer 1.1: Cobranza realizada -->
          <div class={`${containers} ${c_w_cobranza['c_1-1']}`}>
            <div class={`${subcontainers}`}>
              <p class={`${containers_titles} w-3/4`}>
                Cobranza realizada
              </p>
              <div class="flex justify-center items-center h-[40dvh] w-auto">
                <Componente_metas_cobr client:load />
              </div>
            </div>
          </div>

          <!-- Subcontainer 1.2: Cobranza (gráfico Bs) -->
          <div class={`${containers} ${c_w_cobranza['c_1-2']}`}>
            <div class={`${subcontainers}`}>
              <p class={`${containers_titles}`}>
                  Cobranza realizada (Bolivares)
              </p>
              <div class="flex justify-center items-center h-[40dvh]">
                <Componente_graphic_cobr_bs client:load >
              </div>
            </div>
          </div>

          <!-- Subcontainer 1.3: Cobranza (gráfico $) -->
          <div class={`${containers} ${c_w_cobranza['c_1-3']}`}>
            <div class={`${subcontainers}`}>
              <p class={`${containers_titles}`}>
                  Cobranza realizada ($)
              </p>
              <div class="flex justify-center items-center h-[40dvh]">
                <Componente_graphic_cobr_ref client:load >
              </div>
            </div>
          </div>
          
        </div>
      </div>

      <!-- Container #2: Detalle de cobranza -->
      <div id="container-cobr-dtlls">
        <div class="w-full flex flex-wrap">
          <!-- Subcontainer 2.1: Detalles de cobranza -->
          <div class={`${containers} ${c_w_cobranza['c_2-1']}`}>
            <div class={`${subcontainers}`}>
              <div class="flex flex-row justify-between items-center">
                <p class={`${containers_titles} px-1 pb-2`}>
                  Detalle de cobranza
                </p>
              </div>
              <div class="flex h-full justify-start items-center w-full">
                <Componente_table_cobranza client:load />
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>