---
import { ROUTES } from "src/utils/routes";
import Layout from "../layouts/Layout.astro";


---

<Layout title="Inicio de Sesión - CLO">
	<main>
		<div class="flex justify-center items-center min-h-screen max-w-screen bg-[var(--colors-07)]">
      <div class="flex flex-col p-4 space-y-3 w-4/5 md:w-1/2 lg:w-1/2 2xl:w-1/2 bg-[linear-gradient(var(--gradient-wallpaper))] rounded-2xl shadow-[var(--bst)]">
				<div class="w-full flex justify-center h-auto p-4">
					<img 
						src="/logo_color.webp"
						alt="clo-logo"
						class="w-[10rem] auto"
					>
				</div>
				<form 
					action="#" 
					method="POST"
					class="w-full flex flex-col items-center h-auto space-y-4 p-2"
				>
					<input type="text" name="codigo" class="w-full max-w-[80%] text-center bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" placeholder="Usuario" autocomplete="off" minlength={5} maxlength={20} required />
					<input type="password" name="password" class="w-full max-w-[80%] text-center bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5" placeholder="Contraseña" minlength={5} maxlength={20} required />

					<a href="#" class="font-rFont text-[0.75rem] hover:underline text-[var(--colors-07)]">
						Cambiar contraseña
					</a>

					{/* <button type="submit" className="w-auto h-auto px-5 py-2 bg-blue-700 font-rFont text-[var(--colors-07)] rounded-xl text-[1rem]">
							Ingresar
					</button> */}
					<a href={ROUTES.HOME} class="w-auto h-auto px-5 py-2 bg-blue-700 font-rFont text-[var(--colors-07)] rounded-xl text-[1rem]">
						Ingresar
					</a>
				</form>
			</div>
		</div>
	</main>
</Layout>