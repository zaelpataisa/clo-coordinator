---
import Topbar from "src/layouts/Topbar.astro";
import Layout from "../layouts/Layout.astro";
import Header from "src/layouts/Header.astro";
import { container_father } from '../utils/Containers';
import ComponentFather from "src/components/ComponentFather.astro";

import ComponenteClientsActives from './clientes/ClientsActives'
import ComponenteClientsNewest from './clientes/ClientsNewest'
import ComponenteTableClientes from './clientes/TableClientes'
---

<Layout title="Clientes - CLO">
  <!-- Header -->
  <Header />
  <div class="flex flex-col">
    <!-- Topbar -->
    <div>
      <Topbar />
      <div class="hr-custom"></div>
    </div>

    <!-- Content -->
    <div id="content" class="w-full">
      <!-- Container #1: EstadÃ­sticas de clientes -->
      <div id="container-clientes" class={`${container_father}`}>
        <!-- Subcontainer 1.1: Clientes activos en el mes -->
        <ComponentFather
          title={"Clientes activos en el mes"}
          containerId={"clientes_1-1"}
        >
          <ComponenteClientsActives client:load />
        </ComponentFather>

        <!-- Subcontainer 1.2: Clientes nuevos en el mes -->
        <ComponentFather
          title={"Clientes nuevos en el mes"}
          containerId={"clientes_1-2"}
        >
          <ComponenteClientsNewest client:load />
        </ComponentFather>
      </div>

      <!-- Container #2: Detalle de clientes por vendedor -->
      <div id="container-clientes-tables" class={`${container_father}`}>
        <!-- Subcontainers 2.1: Detalle de clientes por vendedor -->
        <ComponentFather
          title={"Detalle de clientes por vendedor"}
          containerId={"clientes_2-1"}
        >
          <ComponenteTableClientes client:load />
        </ComponentFather>
      </div>
    </div>
  </div>
</Layout>