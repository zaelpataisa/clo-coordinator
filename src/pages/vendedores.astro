---
import Topbar from "src/layouts/Topbar.astro";
import Layout from "../layouts/Layout.astro";
import Header from "src/layouts/Header.astro";
import { container_father } from '../utils/Containers';
import ComponentFather from "src/components/ComponentFather.astro";

import Componente_table_vendedores from './vendedores/table_vendedores'
import Componente_graphic_fact_pdds_vend from './vendedores/graphic_fact_pdds_vend'
import Componente_table_fact_pdds_vend from './vendedores/table_fact_pdds_vend'
import Componente_graphic_cobr_bs from './vendedores/graphic_cobr_bs'
import Componente_graphic_cobr_ref from './vendedores/graphic_cobr_ref'
import Componente_table_cobr_vend from './vendedores/table_cobr_vend'
---

<Layout title="Vendedores - CLO">
  <!-- Header -->
  <Header />
  <div class="flex flex-col">
    <!-- Topbar -->
    <div>
      <Topbar />
      <div class="hr-custom"></div>
    </div>
    
    <!-- Content -->
    <div id="content" class="w-full">
      <!-- Container #1: Detalle general de vendedores -->
      <div id="container-vendedores" class={`${container_father}`}>
        <!-- Subcontainer 1.1: Detalle general de vendedores -->
        <ComponentFather
          title={"Detalle general de vendedores"}
          containerId={"vendedores_1-1"}
        >
          <Componente_table_vendedores client:load />
        </ComponentFather> 
      </div>

      <!-- Container #2: Facturas y pedidos -->
      <div id="container-fact-pdds" class={`${container_father}`}>
        <!-- Subcontainer 2.1: Cantidad de facturas y pedidos -->
        <ComponentFather
          title={"Detalle de clientes por vendedor"}
          containerId={"vendedores_2-1"}
        >
          <Componente_graphic_fact_pdds_vend client:load />
        </ComponentFather> 

        <!-- Subcontainer 2.2: Hist贸rico de pedidos y facturas -->
        <ComponentFather
          title={"Hist贸rico de pedidos y facturas"}
          containerId={"vendedores_2-2"}
        >
          <Componente_table_fact_pdds_vend client:load />
        </ComponentFather> 
      </div>

      <!-- Container #3: Cobranzas -->
      <div id="container-cobrs" class={`${container_father}`}>
        <!-- Subcontainer 3.1: Cantidad de cobranzas -->
        <ComponentFather
          title={"Cantidad de cobranzas ($)"}
          containerId={"vendedores_3-1"}
        >
          <Componente_graphic_cobr_ref client:load />
        </ComponentFather> 

        <!-- Subcontainer 3.2: Hist贸rico de cobranza -->
        <ComponentFather
          title={"Hist贸rico de cobranza"}
          containerId={"vendedores_3-2"}
        >
          <Componente_table_cobr_vend client:load />
        </ComponentFather> 
      </div>
    </div>
  </div>
</Layout>